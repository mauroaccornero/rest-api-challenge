{
  "clearMocks": true,
  "testEnvironment": "jsdom",
  "preset": "ts-jest",
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": ["./src/**"],
  "coverageThreshold": {
    "global": {
      "lines": 70
    }
  },
  "moduleNameMapper": {
    "^.+\\.(css|less|scss)$": "identity-obj-proxy"
  },
  "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"]
}
